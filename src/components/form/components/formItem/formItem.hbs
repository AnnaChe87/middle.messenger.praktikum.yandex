{{#if label}}
  <label class="form-item-label">{{label}}</label>
{{/if}}
<div class="form-item-control">
  {{#if isFile}}
    <label>
      {{{input}}}
      {{#if value}}
        <p class="upload-value">{{value}}</p>
      {{else}}
        <p class="upload-label">{{uploadLabel}}</p>
      {{/if}}
    </label>
  {{else}}
    {{{input}}}
  {{/if}}
  {{{errors}}}
</div>
