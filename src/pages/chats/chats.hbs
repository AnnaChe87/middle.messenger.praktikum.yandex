<div class="chats">
    <div class="chats-navigation">
        <div class="chats-navigation-profile">
            {{{link}}}
        </div>
        <div class="chats-navigation-search">
            {{{search}}}
        </div>
        <div class="chats-navigation-list">
            {{#each chats}}
                {{{this}}}
            {{/each}}
        </div>
    </div>
    <div class="chats-chat">
        {{{selectedChat}}}
        {{#with selectedChat}}
            {{{selectedChat}}}
        {{else}}
            <span class="not-selected-text">Выберите чат, чтобы отправить сообщение</span>
        {{/with}}
    </div>
</div>
